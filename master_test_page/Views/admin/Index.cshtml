@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    <div class="d-flex flex-column flex-md-row">
        <!-- Sidebar -->
        <aside class="bg-light p-3 d-none d-md-block" style="width: 250px;">
            <!-- Sidebar content here -->
        </aside>

        <!-- Main content -->
        <div class="flex-grow-1">
            <header class="d-flex flex-column flex-md-row justify-content-between align-items-center p-3 bg-white shadow-sm">
                <h2 class="mb-0">Overview</h2>
                <div class="search-bar w-100 w-md-50 mx-md-3">
                    <input type="text" class="form-control" placeholder="Search for data & reports...">
                </div>
            </header>
            <main class="p-3">
                <div class="row mb-3">
                    <div class="col-12 col-sm-6 col-lg-3 mb-3">
                        <div class="card bg-light text-center p-3">
                            <h3 class="card-title">10,368</h3>
                            <p class="card-text">Members Online</p>
                        </div>
                    </div>
                    <div class="col-12 col-sm-6 col-lg-3 mb-3">
                        <div class="card bg-light text-center p-3">
                            <h3 class="card-title">388,688</h3>
                            <p class="card-text">Items Sold</p>
                        </div>
                    </div>
                    <div class="col-12 col-sm-6 col-lg-3 mb-3">
                        <div class="card bg-light text-center p-3">
                            <h3 class="card-title">1,086</h3>
                            <p class="card-text">This Week</p>
                        </div>
                    </div>
                    <div class="col-12 col-sm-6 col-lg-3 mb-3">
                        <div class="card bg-light text-center p-3">
                            <h3 class="card-title">$1,060,386</h3>
                            <p class="card-text">Total Earnings</p>
                        </div>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-12 col-md-6 mb-3">
                        <div class="card bg-light p-3">
                            <h3 class="card-title">Recent Reports</h3>
                            <canvas id="recentReportsChart"></canvas>
                        </div>
                    </div>
                    <div class="col-12 col-md-6 mb-3">
                        <div class="card bg-light p-3">
                            <h3 class="card-title">Chart By %</h3>
                            <canvas id="charByChart"></canvas>
                        </div>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-12 mb-3">
                        <div class="card bg-light p-3">
                            <h3 class="card-title">Earnings By Items</h3>
                            <table class="table table-hover">
                                <thead class="thead-light">
                                    <tr>
                                        <th>Date</th>
                                        <th>Order ID</th>
                                        <th>Name</th>
                                        <th>Price</th>
                                        <th>Quantity</th>
                                        <th>Total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>2023-09-29 05:57</td>
                                        <td>100396</td>
                                        <td>Handmade Jewelry </td>
                                        <td>$999.00</td>
                                        <td>1</td>
                                        <td>$999.00</td>
                                    </tr>
                                    <tr>
                                        <td>2023-09-28 01:22</td>
                                        <td>100397</td>
                                        <td>Hand Weaving </td>
                                        <td>$756.00</td>
                                        <td>1</td>
                                        <td>$756.00</td>
                                    </tr>
                                    <!-- Add more rows as needed -->
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-12 mb-3">
                        <div class="card bg-light p-3">
                            <h3 class="card-title">Top Jordanian Governorates</h3>
                            <ul class="list-unstyled">
                                <li>Amman - $119,366.96</li>
                                <li>Zarqa - $70,261.65</li>
                                <li>Irbid - $46,399.22</li>
                                <li>Jersey - $35,364.90</li>
                                <li>Ajloun - $20,366.96</li>
                                <li>Ma'an - $10,366.96</li>
                                <li>Karak - $5,366.96</li>
                                <li>Madaba - $3,366.32</li>
                                <li>Mafraq - $3,000.00</li>
                                <li>Jerash - $2,500.00</li>
                                <li>Balqa - $2,000.00</li>
                                <li>Petra - $1,500.00</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
        const ctx1 = document.getElementById('recentReportsChart').getContext('2d');
        const recentReportsChart = new Chart(ctx1, {
            type: 'line',
            data: {
                labels: ['January', 'February', 'March', 'April', 'May', 'June', 'July'],
                datasets: [{
                    label: 'Products',
                    data: [50, 60, 70, 80, 60, 70, 80],
                    backgroundColor: 'rgba(54, 162, 235, 0.2)',
                    borderColor: 'rgba(54, 162, 235, 1)',
                    borderWidth: 1
                }, {
                    label: 'Courses',
                    data: [30, 20, 10, 20, 30, 40, 30],
                    backgroundColor: 'rgba(255, 99, 132, 0.2)',
                    borderColor: 'rgba(255, 99, 132, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });

        const ctx2 = document.getElementById('charByChart').getContext('2d');
        const charByChart = new Chart(ctx2, {
            type: 'doughnut',
            data: {
                labels: ['Products', 'Courses'],
                datasets: [{
                    data: [25, 75],
                    backgroundColor: ['#36A2EB', '#FF6384']
                }]
            }
        });
    </script>
</body>
</html>
