    <script>
        // Example script to calculate total items and price
        document.addEventListener('DOMContentLoaded', function () {
            var totalItems = 0;
            var totalPrice = 0;

            // Iterate through each product card
            document.querySelectorAll('.card').forEach(function (card) {
                var quantity = parseInt(card.querySelector('.card-text').textContent.match(/Quantity: (\d+)/)[1]);
                var price = parseFloat(card.querySelector('.card-text').textContent.match(/Price: \$([\d.]+)/)[1]);
                totalItems += quantity;
                totalPrice += price * quantity;
            });

            // Update the summary
            document.getElementById('total-items').textContent = totalItems;
            document.getElementById('total-price').textContent = totalPrice.toFixed(2);
        });
    </script>

