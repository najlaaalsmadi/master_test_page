@{
    ViewBag.Title = "Contact";
}
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
<h1>Contact With Us</h1>
<div class="row">
    <div class="col-md-4 contact-info">
        <div>
            <i class="fas fa-map-marker-alt"></i> Address: 123 Kensington, London, UK
        </div>
        <div>
            <i class="fas fa-phone"></i> Phone: 077-123-45678
        </div>
        <div>
            <i class="fas fa-envelope"></i> E-mail: info@ideamedia.com
        </div>
    </div>
    <div class="col-md-8">
        <h2>Send Us Message</h2>
        <form action="/Home/Send_Message">
            <div class="form-group">
                <textarea class="form-control" rows="5" placeholder="Your message" name="Message1" id="Message1"></textarea>
            </div>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <input type="text" class="form-control" placeholder="Name" name="Name1" id="Name1">
                </div>
                <div class="form-group col-md-4">
                    <input type="email" class="form-control" placeholder="Email" name="Email1" id="Email1">
                </div>
                <div class="form-group col-md-4">
                    <input type="text" class="form-control" placeholder="Phone" name="Phone1" id="Phone1">
                </div>
            </div>
            <button type="submit" class="btn btn-warning">Submit</button>
        </form>
    </div>
</div>
<br />
@if (ViewBag.Message1 != null && ViewBag.Name1!=null && ViewBag.Email1 !=  null && ViewBag.Phone1 != null)
{
    <table border="1">
        <tr>
            <th>Message</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
        </tr>
        <tr>
            <td>@ViewBag.Message1</td>
            <td>@ViewBag.Name1</td>
            <td>@ViewBag.Email1</td>
            <td>@ViewBag.Phone1</td>
        </tr>
    </table>

}
