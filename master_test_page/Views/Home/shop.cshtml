
@{
    ViewBag.Title = "Shop Page";
}
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

<div class="row">
    <aside class="col-md-3 mb-4">
        <div class="card mb-4">
            <div class="card-header">Categories</div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item"><input type="checkbox"> All</li>
                <li class="list-group-item"><input type="checkbox"> Beads (10)</li>
                <li class="list-group-item"><input type="checkbox"> Fabric & Sewing (10)</li>
                <li class="list-group-item"><input type="checkbox"> Knitting & Crochet (10)</li>
                <li class="list-group-item"><input type="checkbox"> Needlecrafts (10)</li>
                <li class="list-group-item"><input type="checkbox"> Paper Crafts (10)</li>
            </ul>
        </div>
        <div class="card mb-4">
            <div class="card-header">Language</div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item"><input type="checkbox"> Spanish (10)</li>
                <li class="list-group-item"><input type="checkbox"> English (10)</li>
            </ul>
        </div>
        <div class="card mb-4">
            <div class="card-header">Price</div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item"><input type="radio" name="price"> Under $10</li>
                <li class="list-group-item"><input type="radio" name="price"> $10 - $50</li>
            </ul>
        </div>
        <div class="card">
            <div class="card-header">Ratings</div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item"><input type="checkbox"> <span>⭐⭐⭐⭐⭐</span> (3)</li>
                <li class="list-group-item"><input type="checkbox"> <span>⭐⭐⭐⭐</span> (2)</li>
