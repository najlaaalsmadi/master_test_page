@{
    ViewBag.Title = "CourseDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
<div class="container my-5">
    <!-- Breadcrumb Navigation -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Home</a></li>
            <li class="breadcrumb-item"><a href="#">Courses</a></li>
            <li class="breadcrumb-item active" aria-current="page">Sewing Clothes</li>
        </ol>
    </nav>

    <div class="row">
        <!-- Course Header -->
        <div class="col-12 mb-4">
            <img src="~/image/Pink Brush Feminine  Logo (4).png" class="img-fluid rounded" alt="Course Image" />
        </div>

        <!-- Course Details -->
        <div class="col-lg-8">
            <div class="course-details">
                <h1>Sewing Clothes</h1>
                <div class="d-flex flex-column mb-4">
                    <span><strong>by David Miller</strong></span>
                    <span>24/03/2023</span>
                    <span>2,258 Students</span>
                </div>
                <ul class="nav nav-tabs mb-4" id="courseTabs" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="overview-tab" data-bs-toggle="tab" data-bs-target="#Overview" type="button" role="tab" aria-controls="Overview" aria-selected="true">Overview</button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="curriculum-tab" data-bs-toggle="tab" data-bs-target="#Curriculum" type="button" role="tab" aria-controls="Curriculum" aria-selected="false">Curriculum</button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="handicrafts-tab" data-bs-toggle="tab" data-bs-target="#Handicrafts" type="button" role="tab" aria-controls="Handicrafts" aria-selected="false">Handicrafts</button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="reviews-tab" data-bs-toggle="tab" data-bs-target="#Reviews" type="button" role="tab" aria-controls="Reviews" aria-selected="false">Reviews</button>
                    </li>
                </ul>
                <div class="tab-content" id="courseTabsContent">
                    <div class="tab-pane fade show active" id="Overview" role="tabpanel" aria-labelledby="overview-tab">
                        <h2>Course Description</h2>
                        <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>
                        <h3>What you'll learn in this course:</h3>
                        <ul>
                            <li>Work with clothing & Garments & Grids</li>
                            <li>All the useful shortcuts</li>
                            <li>Be able to create flyers, Brochures, Advertisements</li>
                            <li>How to work with images & Text</li>
                        </ul>
                    </div>
                    <div class="tab-pane fade" id="Curriculum" role="tabpanel" aria-labelledby="curriculum-tab">
                        <h2>Curriculum</h2>
                        <p>Curriculum details go here...</p>
                    </div>
                    <div class="tab-pane fade" id="Handicrafts" role="tabpanel" aria-labelledby="handicrafts-tab">
                        <h2>Handicrafts</h2>
                        <p>Handicrafts details go here...</p>
                    </div>
                    <div class="tab-pane fade" id="Reviews" role="tabpanel" aria-labelledby="reviews-tab">
                        <h2>Reviews</h2>
                        <p>Reviews go here...</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Course Price and Other Details -->
        <div class="col-lg-4">
            <div class="card p-4 border-light bg-light">
                <div class="card-body">
                    <div class="price-box mb-4">
                        <h3>$18.00 <del>$25.00</del></h3>
                    </div>
                    <h4>Course Includes:</h4>
                    <ul class="list-unstyled">
                        <li>Duration: 10 hours</li>
                        <li>Lectures: 20</li>
                        <li>Videos: 10</li>
                        <li>Certifications: Yes</li>
                    </ul>
                    <a class="btn btn-warning w-100"  href=" @Url.Action("Payment", "Home")"onclick="enrollNow(this)">Enroll Now</a>
                   
                    <div class="mt-4">
                        <h4>Payment Options:</h4>
                        <p>PayPal, Visa, MasterCard</p>
                    </div>
                    <h4 class="mt-4">Share this course:</h4>
                    <p>Icons for sharing on social media</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap JS and Dependencies -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
<script>
    function enrollNow(button) {
        alert('Enrolled successfully!');
    }
</script>
