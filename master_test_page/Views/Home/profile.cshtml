
@{
    ViewBag.Title = "profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
<style>
    .profile-header {
        background-color: #2c2c6c;
        color: white;
    }

        .profile-header img {
            border-radius: 50%;
        }

    .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card:hover {
            transform: translateY(-10px);
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
        }
</style>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8">
            <div class="profile-header text-center p-4 mb-4 rounded">
                <img src="~/image/instructor2.png" alt="Instructor Image" class="mb-3" />

                <h2>Robert Fox</h2>
                <p><i class="fas fa-envelope"></i> rf@gmail.com &nbsp;|&nbsp; <i class="fas fa-phone"></i> +123 9500 600</p>
                <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vestibulum ac eros eget lorem suscipit consequat.</p>
                <div class="d-flex justify-content-center">
                    <a href="#"><i class="fas fa-heart text-light"></i><span class="badge badge-pill badge-danger">0</span></a>
                    <a href="#"><i class="fas fa-shopping-cart text-light"></i><span class="badge badge-pill badge-danger">0</span></a>

                </div>
            </div>

            <div class="bg-light p-4 rounded mb-4">
                <h4>Biography</h4>
                <p>A Resin Maker is a professional in the art of crafting and molding resin, excelling in designing and creating unique and beautiful resin crafts. They are skilled in handling materials and producing high-quality, aesthetically pleasing products. They offer training workshops and online courses to help others acquire the necessary skills to start their own resin crafting projects.</p>
            </div>

            <div>
                <h4>My Courses</h4>
                <div class="row">
                    <div class="col-lg-3 col-md-6 mb-6">
                        <div class="card h-100 text-center">
                            <img src="~/image/sewing-clothes.png" class="card-img-top" alt="Course Image" />
                            <div class="card-body">
                                <h5 class="card-title">Sewing clothes</h5>
                                <p class="card-text">by David Miller</p>
                            </div>
                            <div class="card-footer">
                                <p class="font-weight-bold">$15.00</p>
                                <a href="@Url.Action("ViewCourse", "Home")"  class="btn btn-warning">View Course</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6 mb-6">
                        <div class="card h-100 text-center">
                            <img src="~/image/carpentry.png" class="card-img-top" alt="Course Image" />
                            <div class="card-body">
                                <h5 class="card-title">Carpentry</h5>
                                <p class="card-text">by David Miller</p>
                            </div>
                            <div class="card-footer">
                                <p class="font-weight-bold">$18.00</p>
                                <a href="#" class="btn btn-warning">View Course</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6 mb-6">
                        <div class="card h-100 text-center">
                            <img src="~/image/Fashion Design.png" class="card-img-top" alt="Course Image" />
                            <div class="card-body">
                                <h5 class="card-title">Fashion Design</h5>
                                <p class="card-text">by David Miller</p>
                            </div>
                            <div class="card-footer">
                                <p class="font-weight-bold">$24.00</p>
                                <a href="#" class="btn btn-warning">View Course</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6 mb-6">
                        <div class="card h-100 text-center">
                            <img src="~/image/Pink Brush Feminine  Logo (4).png" class="card-img-top" alt="Course Image" />
                            <div class="card-body">
                                <h5 class="card-title">Bags, Jewelry and Beaded Clothes</h5>
                                <p class="card-text">by David Miller</p>
                            </div>
                            <div class="card-footer">
                                <p class="font-weight-bold">$12.00</p>
                                <a href="#" class="btn btn-warning">View Course</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="bg-light p-4 rounded">
                <h4>Quick Contact</h4>
                <form>
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input type="text" class="form-control" id="name">
                    </div>
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" class="form-control" id="email">
                    </div>
                    <div class="form-group">
                        <label for="phone">Phone</label>
                        <input type="text" class="form-control" id="phone">
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">Send Message</button>
                </form>
            </div>
        </div>
    </div>
   
            </div>


